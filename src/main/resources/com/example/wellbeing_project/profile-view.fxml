<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.*?>
<VBox spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.wellbeing_project.profile.ProfileController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="50.0"/>
    </padding>
    <VBox alignment="CENTER_LEFT" spacing="10.0">
        <padding>
            <Insets left="10.0"/>
        </padding>
        <Button fx:id="backButton" text="Back" onAction="#goBack"/>
    </VBox>
    <VBox alignment="CENTER_LEFT" spacing="10.0">
        <padding>
            <Insets left="10" top="20.0"/>
        </padding>
    </VBox>
    <VBox alignment="CENTER_LEFT" spacing="10.0">
        <padding>
            <Insets left="10.0" right="10.0"/>
        </padding>
        <Label text="Name:"/>
        <TextField fx:id="nameField"/>

        <Label text="Email:"/>
        <TextField fx:id="emailField"/>

        <Label text="Please enter password to change:"/>
        <PasswordField fx:id="passwordField"/>
    </VBox>

    <VBox alignment="CENTER" spacing="20.0">
        <padding>
            <Insets top="10.0"/>
        </padding>
        <Button fx:id="changeButton" text="Save Changes" maxWidth="Infinity" onAction="#saveChanges"/>
    </VBox>
</VBox>
