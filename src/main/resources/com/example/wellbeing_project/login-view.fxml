<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.*?>
<VBox spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.wellbeing_project.login.LoginController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="50.0"/>
    </padding>
    <VBox alignment="CENTER" spacing="10.0">
        <Label fx:id="title" text="Wellbeing Tracker"/>
    </VBox>
    <VBox alignment="CENTER_LEFT" spacing="10.0">
        <padding>
            <Insets left="10" top="30.0"/>
        </padding>
        <Label fx:id="subtitle" text="Sign In"/>
    </VBox>
    <VBox alignment="CENTER_LEFT" spacing="10.0">
        <padding>
            <Insets left="10.0" right="10.0"/>
        </padding>
        <Label text="Email:"/>
        <TextField fx:id="emailField"/>

        <Label text="Password:"/>
        <PasswordField fx:id="passwordField"/>
        <CheckBox text="Remember me"/>
    </VBox>

    <VBox alignment="CENTER" spacing="20.0">
        <padding>
            <Insets top="10.0"/>
        </padding>

        <Button fx:id="signinBtn" text="Sign In" onAction="#signin" maxWidth="Infinity"/>
    </VBox>
    <VBox alignment="CENTER_RIGHT" spacing="10.0">
        <padding>
            <Insets bottom="10.0"/>
        </padding>

        <Button fx:id="signupButton" onAction="#startSignup" text="Sign Up"/>
    </VBox>
</VBox>
