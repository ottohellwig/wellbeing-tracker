<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.wellbeing_project.FocusPeriodController">
    <children>
        <Label text="Set Focus Period" />
        <Label text="Task Name:" />
        <TextField fx:id="taskNameField" promptText="Enter task name" />
        <Label text="Start Time:" />
        <TextField fx:id="startTimeField" promptText="HH:mm" />
        <Label text="End Time:" />
        <TextField fx:id="endTimeField" promptText="HH:mm" />
        <Button text="Set Focus Period" onAction="#setFocusPeriod" />
        <Label fx:id="focusPeriodStatusLabel" text="Focus Period Status:" />
    </children>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
</VBox>