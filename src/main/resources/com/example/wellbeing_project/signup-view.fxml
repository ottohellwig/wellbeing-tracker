<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.*?>
<VBox spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.wellbeing_project.signup.SignupController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="50.0"/>
    </padding>
    <VBox alignment="CENTER_LEFT" spacing="10.0">
        <padding>
            <Insets left="10.0"/>
        </padding>
        <Label text="Back"/>
    </VBox>
    <VBox alignment="CENTER_LEFT" spacing="10.0">
        <padding>
            <Insets left="10" top="20.0"/>
        </padding>
        <Label fx:id="subtitle" text="Sign Up"/>
    </VBox>
    <VBox alignment="CENTER_LEFT" spacing="10.0">
        <padding>
            <Insets left="10.0" right="10.0"/>
        </padding>
        <Label text="Name:"/>
        <TextField fx:id="nameField"/>

        <Label text="Email:"/>
        <TextField fx:id="emailField"/>

        <Label text="Password:"/>
        <PasswordField fx:id="passwordField"/>
    </VBox>

    <VBox alignment="CENTER" spacing="20.0">
        <padding>
            <Insets top="10.0"/>
        </padding>
        <Button fx:id="signinBtn" text="Sign Up" onAction="#manageSignup" maxWidth="Infinity"/>
    </VBox>
    <VBox alignment="CENTER_RIGHT" spacing="10.0">
        <padding>
            <Insets bottom="10.0"/>
        </padding>
        <HBox>
            <padding>
                <Insets left="10.0" right="10.0"/>
            </padding>
            <Label text="Already have an account?"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="loginButton" onAction="#startLogin" text="Sign in"/>
            <Label text="Sign In"/>
        </HBox>

    </VBox>
</VBox>
